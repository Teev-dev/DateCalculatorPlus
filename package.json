{
  "name": "date-calculator-plus",
  "version": "1.0.0",
  "description": "Advanced date calculation tool for workdays, timezones, and holidays",
  "type": "module",
  "scripts": {
    "dev": "PORT=8080 node server.js",
    "test-server": "PORT=3000 node test-server.js",
    "dev-win": "set PORT=8080 && node server.js",
    "start": "node server.js",
    "debug": "PORT=3000 node debug-server.js",
    "fix-replit": "PORT=4000 node replit-fix.js",
    "fix-env": "node fix-env.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "setup-db": "node setup-db.js",
    "setup-db-sqlite": "node setup-db-sqlite.js",
    "process-images": "node process-images.js"
  },
  "keywords": [
    "date",
    "calculator",
    "timezone",
    "holiday",
    "workdays"
  ],
  "author": "DateCalculatorPlus Team",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-toast": "^1.2.6",
    "@tanstack/react-query": "^4.36.1",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.28.6",
    "express": "^4.21.2",
    "pg": "^8.14.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.2",
    "@types/react": "^18.3.19",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^7.1.7"
  }
}
