{
  "manifest_version": 3,
  "name": "Date Calculator Plus",
  "version": "1.0",
  "description": "Calculate future or past dates and the number of working days for UK, US, and Australia",
  "permissions": [],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
